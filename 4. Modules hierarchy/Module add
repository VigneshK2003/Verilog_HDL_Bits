module top_module(
    input [31:0] a,
    input [31:0] b,
    output [31:0] sum
);

    wire [15:0] sum_low, sum_high;
    wire carry_out1, carry_out2;

    add16 adder1(.a(a[15:0]), .b(b[15:0]), .cin(1'b0), .sum(sum_low), .cout(carry_out1));
    
    add16 adder2(.a(a[31:16]), .b(b[31:16]), .cin(carry_out1), .sum(sum_high), .cout(carry_out2));

    assign sum = {sum_high, sum_low};

endmodule

