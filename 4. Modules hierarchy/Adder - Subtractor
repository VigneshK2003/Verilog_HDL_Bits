module top_module(
    input [31:0] a,
    input [31:0] b,
    input sub,
    output [31:0] sum
);

    wire [31:0] b_xor;
    wire cout1, cout2;

    assign b_xor = b ^ {32{sub}};

    add16 add_low (.a(a[15:0]), .b(b_xor[15:0]), .cin(sub), .sum(sum[15:0]), .cout(cout1));
    
    add16 add_high(.a(a[31:16]), .b(b_xor[31:16]), .cin(cout1), .sum(sum[31:16]), .cout(cout2));

endmodule
    
